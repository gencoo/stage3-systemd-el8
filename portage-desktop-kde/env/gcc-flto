CC="gcc"
CXX="g++"
ANNO_FLAGS="-specs=/usr/lib/rpm/redhat/redhat-annobin-cc1"
CFLAGS="-mtune=native -march=native -flto=auto -O2 -g -pipe -Wall -Werror=format-security -Wp,-D_FORTIFY_SOURCE=2 -Wp,-D_GLIBCXX_ASSERTIONS -fexceptions -fstack-protector-strong -grecord-gcc-switches ${ANNO_FLAGS} -specs=/usr/lib/rpm/redhat/redhat-hardened-cc1 -m64 -fasynchronous-unwind-tables -fstack-clash-protection -fcf-protection"
CXXFLAGS="${CFLAGS}"
FFLAGS="${CFLAGS} -I/usr/lib64/gfortran/modules"
FCFLAGS="${FFLAGS}"
LDFLAGS="-Wl,--as-needed -Wl,-z,relro -Wl,-z,now -specs=/usr/lib/rpm/redhat/redhat-hardened-ld"
AR="gcc-ar"
NM="gcc-nm"
RANLIB="gcc-ranlib"
